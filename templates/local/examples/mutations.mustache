{{!
    @template format_editortest/local/examples/stateready

    State ready component example.
}}
<div class="card m-3" id="{{uniqid}}-example-mutations">
  <div class="card-body">
    <h5 class="card-title">Watcher and mutation example</h5>
    <p class="card-text">
       This component also watches the "course.samplebool" state variable.
       However, it also has a button to togglge that variable using the
       format specific "toggleCourseValue" mutation.
    </p>
    <p class="card-text" data-for="content">Waiting the intial state...</p>
    <p class="card-text">
        <button type="button" class="btn btn-primary" data-for="toggler">Toggle "samplebool" value.</button>
    </p>
  </div>
</div>
{{#js}}
require(['format_editortest/local/examples/mutations'], function(component) {
    component.init('{{uniqid}}-example-mutations');
});
{{/js}}