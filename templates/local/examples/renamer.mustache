{{!
    @template format_editortest/local/examples/stateready

    State ready component example.
}}
<div class="input-group mb-3" id="{{uniqid}}-example-renamer">
  <div class="input-group-prepend">
    <span class="input-group-text" id="{{uniqid}}-field">Value</span>
  </div>
  <input type="text" class="form-control" placeholder="New value"
        aria-label="New value" aria-describedby="{{uniqid}}-field"
        value="{{inputvalue}}">
</div>
{{#js}}
require(['format_editortest/local/examples/renamer'], function(component) {
    component.init('{{uniqid}}-example-renamer');
});
{{/js}}