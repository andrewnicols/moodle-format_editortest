{{!
    @template format_editortest/local/examples/lazycomponent/sample

    State ready component example.
}}
<div id="{{uniqid}}-example-lazycomponent-sample">
    <h6>This is a lazy component</h6>
    <p class="card-text" data-for="content">Waiting the intial state...</p>
    <div class="alert alert-success" role="alert">
        Oh! and we have some data: {{title}}
    </div>
</div>
